{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "appimage": {
        "type": "string"
      },
      "groupname": {
        "type": "string"
      }
    },
    "variables": {
      "container1name": "mainapp",
      "container1image": "[parameters('appimage')]",
      "container2name": "sqlsvr",
      "container2image": "microsoft/mssql-server-windows-developer"
    },
    "resources": [
      {
        "name": "[parameters('groupname')]",
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2018-04-01",
        "location": "[resourceGroup().location]",
        "properties": {
          "containers": [
            {
              "name": "[variables('container1name')]",
              "properties": {
                "image": "[variables('container1image')]",
                "environmentVariables": 
                [
                  { "name": "UseMockData", "value":"False" },
                  { "name": "ConnectionString", "value":"Data Source=.;Database=Microsoft.eShopOnContainers.Services.CatalogDb;User Id=sa;Password=Pass@word"},
                  { "name": "UseAzureActiveDirectory", "value": "false"}
                ],
                "resources": {
                  "requests": {
                    "cpu": 1,
                    "memoryInGb": 1.5
                  }
                },
                "ports": [
                  {
                    "port": 80
                  }
                ]
              }
            },
            {
              "name": "[variables('container2name')]",
              "properties": {
                "image": "[variables('container2image')]",
                "environmentVariables": 
                [
                  { "name": "SA_PASSWORD", "value":"Pass@word" },
                  {  "name": "ACCEPT_EULA", "value":"Y"}
                ],                
                "resources": {
                  "requests": {
                    "cpu": 1,
                    "memoryInGb": 1.5
                  }
                }
              }
            }
          ],
          "osType": "Windows",
          "ipAddress": {
            "type": "Public",
            "ports": [
              {
                "protocol": "tcp",
                "port": "80"
              }
            ]
          }
        }
      }
    ],
    "outputs": {
      "containerIPv4Address": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('groupname'))).ipAddress.ip]"
      }
    }
  }